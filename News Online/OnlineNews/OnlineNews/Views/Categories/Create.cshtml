@model OnlineNews.category

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout_backend.cshtml";
}

<div class="content-wrapper" style="min-height: 512px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>@TempData["mainHead"]</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">@TempData["breadcrumb"]</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <!-- Form Element sizes -->
                    <div class="card card-success">
                        <div class="card-header">
                            <h3 class="card-title">@TempData["cardTitle"]</h3>
                        </div>
                        <div class="card-body">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        <label for="cname" class="control-label col-md-2">Category Name</label>
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.cname, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.cname, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="ctype" class="control-label col-md-2">Category Type</label>
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.ctype, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.ctype, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <input type="hidden" name="createdby" value="admin" />
                                    <input type="hidden" name="modiffiedby" value="admin" />
                                    <input type="hidden" name="createdDate" value="@DateTime.Now" />
                                    <input type="hidden" name="modifiedDate" value="@DateTime.Now" />


                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Create" class="btn btn-default" />
                                        </div>
                                    </div>
                                </div>
                            }

                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!--/.col (left) -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
 
